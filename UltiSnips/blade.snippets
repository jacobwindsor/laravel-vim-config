snippet password "Create a new Laravel/Foundation password field"
<!-- Form password-field-->
<div class="password-field">
	{!! Form::label('password', 'Your password:') !!}
	{!! Form::password('password', null, [${3:'required' => '', }'placeholder' => '${4:placeholder}', 'pattern' => 'alpha_numeric'}] !!}
	<small class="error">${7:error}</small>
</div>
$0
endsnippet

snippet modal "Create a new Foundation modal"
<!--${1:camelCase}-modal-->
<div id="$1Modal" class="reveal-modal ${2:text-center}" data-reveal>
	${3:content}
</div>
<a class="close-reveal-modal">&#215;</a>
$0
endsnippet

snippet modalButton "Create a new Foundation button to call a modal"
<!--${1:modalName} button-->
<a role="button" href="#" class="button radius" data-reveal-id="$1">${2:value}</a>
$0
endsnippet
